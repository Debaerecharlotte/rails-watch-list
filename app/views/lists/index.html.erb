<div class="container mt-3">
  <div class="page-main-header">
    <h3>My Movie Lists</h3>
  </div>


  <div class="cards">
    <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('../../app/assets/images/movies_'<%=list.name%>'.jpeg')">
          <%= link_to list.name, list_path(list) %>
        </div>
    <% end %>
  </div>
</div>
